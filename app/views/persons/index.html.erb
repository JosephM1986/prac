<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-8 offset-sm-2">
      <h1>People</h1>
      <% @person.each do |people| %>
        <h3><%= people.full_name %></h3>
        <% end %>
      </div>
    </div>
  </div>

  <%= simple_form_for :search, url: root_path, method: "GET", html: {
    class: 'form-inline' } do |f| %>
    <%= f.input :name, input_html: {value: ""} %>
    <%= f.submit "Search", class: "btn btn-primary" %>

    <% end %>
